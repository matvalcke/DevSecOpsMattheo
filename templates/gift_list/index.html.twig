{% extends 'base.html.twig' %}

{% block title %}Gift List{% endblock %}

{% block body %}

	<div class="mt-3">
		<div class="d-flex justify-content-end">
			<a href="{{ path('app_gift_list_new') }}" class="btn btn-primary">
				Create a New List
			</a>
		</div>
		{% for giftList in giftLists %}

			<div class="card">
				<div class="card-header">
					<h3 class="card-title">Gift List</h3>
					<a href="{{ path('app_gift_list_edit', {'id': giftList.id}) }}" class="btn btn-warning">
						Edit
					</a>
					<a href="{{ path('app_gift_list_delete', {'id': giftList.id}) }}" class="btn btn-danger">
						Delete
					</a>
				</div>
				<div class="card-body">
					<table class="table table-striped table-bordered">
						<thead>
							<tr>
								<th>Name</th>
								<th>Price</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							{% for gift in giftList.gifts %}
								<tr>
									<td>{{ gift.name }}</td>
									<td>{{ gift.price }}</td>
									<td>
										<a href="{{ path('app_gift_edit', {'id': gift.id , 'redirect': 'app_gift_list'}) }}" class="btn btn-warning">
											Edit
										</a>
										<a href="{{ path('app_gift_delete', {'id': gift.id, 'redirect': 'app_gift_list'}) }}" class="btn btn-danger">
											Delete
										</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}

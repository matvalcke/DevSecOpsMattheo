{% extends 'base.html.twig' %}

{% block title %}New List{% endblock %}

{% block body %}
	<div class="mt-3">
		<div class="d-flex justify-content-end">
			<a href="{{ path('app_gift_list') }}" class="btn btn-primary">
				View Gift Lists
			</a>
		</div>
		<div class="card mt-2">
			{{ form_start(form) }}
			<div class="card-header text-center fs-5 fw-semibold">
				Create a New Gift List
			</div>
			<div class="card-body py-0 mt-2">
				<div class="mb-3">
					{{ form_label(form.gifts, 'Gifts', {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.gifts, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.gifts) }}
				</div>
			</div>
			<div class="card-footer p-0">
				<button type="submit" class="btn btn-primary w-100">Create List</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}

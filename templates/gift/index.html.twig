{% extends 'base.html.twig' %}

{% block title %}Gifts{% endblock %}

{% block body %}

	<div class="mt-3">
		<div class="d-flex justify-content-end">
			<a href="{{ path('app_gift_new') }}" class="btn btn-primary">
				Add Gift
			</a>
		</div>
		<table class="table table-striped table-bordered mt-2">
			<thead>
				<tr>
					<th>Name</th>
					<th>Price</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for gift in gifts %}
					<tr>
						<td>{{ gift.name }}</td>
						<td>{{ gift.price }}â‚¬</td>
						<td>
							<a href="{{ path('gift_edit', {'id':gift.id , 'redirect':'gift'} )}}" class="btn btn-warning">
